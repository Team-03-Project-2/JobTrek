<!-- Trigger the modal with a button -->
<a type="button" id="addnewjob" class="btn btn-primary" data-toggle="modal" data-target="#myModal"> Add Job </a>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <!-- <h4 class="modal-title">Add Resume</h4> -->
            </div>

            <div class="modal-body">

                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1"> Job Title </label>
                        <input type="title" class="form-control" id="title" aria-describedby="emailHelp"
                            placeholder="Job Trek Developer">
                    </div>

                    <div class="form-group">
                        <label for="companylist">Company</label>
                        <select class="form-control" id="companylist">
                            {{#each companies}}
                            <option>{{company}}</option>
                            {{/each}}
                            {{!-- <option>JobTrek</option>

                            <option>Trilogy</option>
                            <option>Facebook</option>
                            <option>Twitter</option> --}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="location"> Location </label>
                        <input type="location" class="form-control" id="title" aria-describedby="emailHelp"
                            placeholder="San Francisco">
                    </div>

                    <div class="form-group">
                        <label for="jobdescription"> Job Description </label>
                        <textarea class="form-control" id="jobdescription" rows="3"> Job Description </textarea>
                    </div>

                    <div class="form-group">
                        <label for="jobrequirement"> Job Requirement </label>
                        <textarea class="form-control" id="jobrequirement" rows="3"> Job Requirement </textarea>
                    </div>


                    <div class="form-group">
                        <label for="job-url"> Job Post </label>
                        <input type="job-url" class="form-control" id="job-url" aria-describedby="emailHelp"
                            placeholder="indeed.com">
                    </div>

                    <div class="form-group">
                        <label for="jobnotes"> Notes </label>
                        <textarea class="form-control" id="jobNotes" rows="3"> Notes </textarea>
                    </div>
                </form>

                <hr>
                {{!-- <h3>create new resume</h3> --}}
                <!-- complete new one -->
                <!-- new version out of an existing one -->

            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-primary" data-dismiss="modal"> Add </button>
            </div>
        </div>
    </div>
</div>
</div>

<hr>

